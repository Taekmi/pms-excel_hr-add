                    t["no"] = (t.index + 1).astype(int).astype(str)
                    st.session_state[sess_key] = _recalc_df(t)
                    st.success("ì„ íƒí•œ ì¸ë ¥ì„ ì‚­ì œí–ˆìŠµë‹ˆë‹¤.")
                    st.rerun()

