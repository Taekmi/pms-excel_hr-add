YN_OPTIONS        = ["N", "Y"]
CONTRACT_STATUS_OPTIONS = ["ì‘ì„±ì¤‘", "ì²´ê²°ì™„ë£Œ", "ì§„í–‰ì¤‘", "ë³€ê²½", "ì¡°ê¸°ì¢…ë£Œ(ì¤‘ë„í•´ì§€)", "ì¢…ë£Œ"]

