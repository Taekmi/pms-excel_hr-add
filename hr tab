            _sum_diff_md    = float(pd.to_numeric(edited.get("diff_md", []),      errors="coerce").fillna(0).sum())
            _sum_diff_cost  = float(pd.to_numeric(edited.get("diff_cost", []),    errors="coerce").fillna(0).sum())
            _cnt_members    = int(len(edited))
        except Exception:
            _sum_planned_md = _sum_actual_md = _sum_planned_c = _sum_actual_c = _sum_diff_md = _sum_diff_cost = 0.0
            _cnt_members = 0

        st.markdown("---")
        m1, m2, m3, m4, m5, m6, m7 = st.columns(7)
        m1.metric("ì¸ì› ìˆ˜", _cnt_members)
        m2.metric("ê³„íšê³µìˆ˜(MM) í•©", f"{_sum_planned_md:,.2f}")
        m3.metric("ì‹¤ì œê³µìˆ˜(MM) í•©", f"{_sum_actual_md:,.2f}")
        m4.metric("ê³„íšì¸ê±´ë¹„ í•©", f"{_sum_planned_c:,.0f} KRW")
        m5.metric("ì‹¤ì œì¸ê±´ë¹„ í•©", f"{_sum_actual_c:,.0f} KRW")
        m6.metric("ê³µìˆ˜ ì°¨ì´ í•©", f"{_sum_diff_md:,.2f}")
        m7.metric("ë¹„ìš© ì°¨ì´ í•©", f"{_sum_diff_cost:,.0f} KRW")

        # â”€â”€ í‘œ í•˜ë‹¨: ì¢Œì¸¡ ì‚­ì œ / ê°€ìš´ë° ìˆ˜ì • / ìš°ì¸¡ ì €ì¥
        st.markdown("---")
        bottom_l, bottom_m, bottom_r = st.columns([0.25, 0.25, 0.5])

        # ì‚­ì œ(í•˜ë‹¨, ì¢Œì¸¡)
        with bottom_l:
            if st.button("ğŸ—‘ ì„ íƒ ì‚­ì œ", key=hk("del_bottom", proj_id)):
                t = st.session_state[sess_key].copy()
                sel_mask = (t["ì„ íƒ"] == True) if "ì„ íƒ" in t.columns else pd.Series([], dtype=bool)
                if "ì„ íƒ" not in t.columns or not sel_mask.any():
                    st.warning("ì„ íƒëœ ëª©ë¡ì´ ì—†ìŠµë‹ˆë‹¤.")
                else:
