TASK_STATUS_OPTIONS    = ["To Do", "In Progress", "Blocked", "Done"]
TASK_PRIORITY_OPTIONS  = ["Low", "Medium", "High", "Critical"]
PROJECT_STATUS_OPTIONS = ["Planned", "Active", "On Hold", "Closed"]
